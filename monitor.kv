# root widget class
<MainWidget>
    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height

        FloatLayout:
            orientation: 'vertical'
            size_hint: 1, 0.14
            canvas.before:
                Color:
                    rgba: 0.9, 0.77, 0.17, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
            Label:
                text: "ARDUINO MONITOR"
                font_name: "fonts/Oswald-VariableFont_wght.ttf"
                font_size: "36sp"
                color: 0, 0, 0, 0.5  # темно-сіра тінь
                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                size_hint: 1, 1
                # зсув тіні трохи вниз-праворуч
                canvas.before:
                    PushMatrix
                    Translate:
                        x: 2
                        y: -2
                canvas.after:
                    PopMatrix

            Label:
                text: "ARDUINO MONITOR"
                font_name: "fonts/Oswald-VariableFont_wght.ttf"
                font_size: "36sp"
                color: 1, 1, 1, 1
                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                size_hint: 1, 1
